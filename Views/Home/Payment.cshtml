@model Rental

@{
    ViewData["Title"] = "Approve Payment";
}

<h2>Approve Payment</h2>
<div class="row">
    <div class="col-sm-4">
        <h3>Rental Information</h3>
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Customer.FullName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Inventory.Equipment)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Inventory.Equipment.Name)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.StartDate)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.EndDate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EndDate)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Tariff)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Tariff.TariffName)
            </dd>
        </dl>
    </div>

    <div class="col-sm-8">
        <h3>Payment Information</h3>
        <form asp-action="ApprovePayment" method="post">
            <div class="form-group">
                <dt class="col-sm-3">
                    <p>Payment Method</p>
                </dt>
                <dd class="col-sm-9">
                    <p>@ViewBag.PaymentMethod.Name</p>
                </dd>
            </div>
            <div class="form-group">
                <dt class="col-sm-3">
                    <p>Amount to Pay</p>
                </dt>
                <dd class="col-sm-9">
                    <input type="text" id="paymentAmount" name="PaymentAmount" class="form-control" value="@Model.TotalPrice" readonly />
                </dd>
            </div>
            <input type="hidden" name="RentalId" value="@Model.Id"/>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Approve Payment</button>
                <a href="@Url.Action("Index", "Rentals")" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>

</div>
